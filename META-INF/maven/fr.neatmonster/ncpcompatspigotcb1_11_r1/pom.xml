	<modelVersion>4.0.0</modelVersion>
	<groupId>fr.neatmonster</groupId>
	<artifactId>ncpcompatspigotcb1_11_r1</artifactId>
	<packaging>jar</packaging>
	<name>NCPCompatSpigotCB1_11_R1</name>
	<version>1.1-SNAPSHOT</version>

	<parent>
		<groupId>fr.neatmonster</groupId>
